{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "outDir": "dist",
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/*"]
}
